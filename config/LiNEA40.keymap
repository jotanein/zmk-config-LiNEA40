#define ZMK_POINTING_DEFAULT_SCRL_VAL 150

#include <dt-bindings/zmk/input_transform.h>
#include <input/processors.dtsi>
#include <zephyr/dt-bindings/input/input-event-codes.h>
#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/pointing.h>

#define MOUSE 1
#define MARK 2
#define CURSOR 3
#define FUNCTION 4
#define SCROLL 5
#define WIRELESS 6

//mouse cursol

&mmv {
    delay-ms = <20>;
    trigger-period-ms = <5>;
    time-to-max-speed-ms = <100>;
    acceleration-exponent = <2>;
};

//mouse scroll

&msc {
    delay-ms = <3>;
    trigger-period-ms = <3>;
    time-to-max-speed-ms = <100>;
    acceleration-exponent = <0>;
};

/ {
    input_processors {
        zip_wheel_scaler: zip_wheel_scaler {
            compatible = "zmk,input-processor-scaler";
            #input-processor-cells = <2>;
            type = <INPUT_EV_REL>;
            codes = <INPUT_REL_WHEEL>;
            track-remainders;
        };
    };
};

&msc_input_listener {
    speed_up {
        layers = <FUNCTION>;
        input-processors = <&zip_wheel_scaler 3 1>; //スクロールを3倍速にする
    };
};

&trackball_listener {
    scroller {
        layers = <SCROLL>;
        input-processors =
            <&zip_xy_transform INPUT_TRANSFORM_Y_INVERT>,
            //スクロール方向を逆転
            <&zip_xy_to_scroll_mapper>;
    };
};

/ {
    combos {
        compatible = "zmk,combos";

        ZenkakuHankaku {
            bindings = <&kp GRAVE>;
            key-positions = <11 12>;
        };

        DeleteKey {
            bindings = <&kp DEL>;
            key-positions = <7 8>;
        };

        InsertKey {
            bindings = <&kp INS>;
            key-positions = <6 7>;
        };

        CenterClick {
            bindings = <&mkp MB3>;
            key-positions = <17 16>;
        };

        RightClick {
            bindings = <&mkp MB2>;
            key-positions = <18 17>;
        };

        PrevClick {
            bindings = <&mkp MB4>;
            key-positions = <27 28>;
        };

        ClickNext {
            bindings = <&mkp MB5>;
            key-positions = <26 27>;
        };
    };

    behaviors {
        re_kp: sensor_rotate_kp {
            compatible = "zmk,behavior-sensor-rotate-var";
            #sensor-binding-cells = <2>;
            bindings = <&kp>, <&kp>;
        };

        mouse_scrl: mouse_wheel_scrl {
            compatible = "zmk,behavior-sensor-rotate-var";
            #sensor-binding-cells = <2>;
            bindings = <&msc>, <&msc>;

            tap-ms = <20>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
&kp Q          &kp W             &kp E               &kp R    &kp T                                      &kp Y        &kp U  &kp I                &kp O          &kp P
&kp A          &kp S             &kp D               &kp F    &kp G                                      &kp H        &kp J  &lt 3 K              &kp L          &lt MINUS
&kp Z          &kp X             &kp C               &kp V    &kp B                                      &kp N        &kp M  &kp COMMA            &kp DOT        &kp slash
&kp LSHIF      &mt LEFT_WIN TAB  &kp LEFT_ALT        &kp INS  &lt 2 ENTER  &mt LCTRL SPACE    &kp BACKSPACE  &lt 4 Enter         &mo 3                &mo 3          &kp enter
            >;

            sensor-bindings = <&mouse_scrl SCRL_DOWN SCRL_UP>;
        };

        //1

        MOUSE {
            bindings = <
&trans  &trans  &trans  &trans  &trans                    &trans  &trans    &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans                    &trans  &mkp MB1  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans                    &trans  &trans    &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans    &trans  &trans            &trans  &trans  &trans
            >;
        };

        //2

        MARK {
            bindings = <

&kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3  &kp NUMBER_4  &kp N5                                   &kp CARET         &kp AMPERSAND      &kp TILDE       &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS
&kp NUMBER_6  &kp N7        &kp N8        &kp N9        &kp N0                                   &kp APOSTROPHE    &kp SEMI           &kp UNDERSCORE  &kp DOT               &kp SLASH
&trans        &trans        &trans        &kp F11       &kp F12                                  &kp LEFT_BRACKET  &kp RIGHT_BRACKET  &kp LEFT_BRACE  &kp RIGHT_BRACE       &kp BACKSLASH
&kp LSHFT     &kp LWIN      &kp LALT      &trans        &trans     &kp LCTRL             &trans  &trans                               &trans          &trans                &kp PIPE
            >;

            sensor-bindings = <&re_kp C_VOLUME_DOWN C_VOLUME_UP>;
        };

        //3

        CURSOR {
            bindings = <
&trans  &trans  &trans  &trans  &trans                       &trans  &trans    &trans  &mkp MB3  &trans
&trans  &trans  &trans  &trans  &trans                       &trans  &mkp MB1  &trans   &mkp MB2  &trans
&trans  &trans  &trans  &trans  &trans                       &trans  &trans    &trans  &trans    &trans
&trans  &trans  &trans  &trans  &trans  &trans    &kp ENTER  &mo 6             &trans  &trans    &trans
            >;
        };

        //4

        FUNCTION {
            bindings = <
&kp LA(GRAVE) &kp F2  &kp F3  &kp F4   &kp F5                     &bt BT_SEL 0           &bt BT_SEL 1      &bt BT_SEL 2        &bt BT_SEL 3  &kp DEL
&kp F6        &kp F7  &kp F8  &kp F9   &kp F10                    &kp LEFT               &kp DOWN          &kp UP_ARROW        &kp RIGHT     &kp BACKSPACE
&trans        &trans  &trans  &kp F11  &kp F12                    &kp C_RW               &kp C_PLAY_PAUSE  &kp C_FAST_FORWARD  &kp C_MUTE    &kp C_VOLUME_UP
&trans        &trans  &trans  &trans   &trans   &trans    &trans  &trans                                   &trans              &trans  &kp C_VOLUME_DOWN
            >;
            sensor-bindings = <&mouse_scrl SCRL_DOWN SCRL_UP>;
        };

        //5

        SCROLL {
            bindings = <
&trans  &trans  &trans  &trans  &trans                       &trans  &trans    &trans  &mkp MB3  &trans
&trans  &trans  &trans  &trans  &trans                       &trans  &mkp MB1  &trans   &mkp MB2  &trans
&trans  &trans  &trans  &trans  &trans                       &trans  &trans    &trans  &trans    &trans
&trans  &trans  &trans  &trans  &trans  &trans    &kp ENTER  &mo 6             &trans  &trans    &trans
            >;

            sensor-bindings = <&inc_dec_kp DOWN_ARROW UP_ARROW>;
        };

        //6

        WIRELESS {
            bindings = <
&bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4                         &bt BT_SEL 0    &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4
&trans        &trans        &trans        &trans        &trans                               &trans          &trans        &trans        &trans        &trans
&trans        &trans        &trans        &trans        &trans                               &trans          &trans        &trans        &trans        &bt BT_CLR
&trans        &trans        &trans        &trans        &trans        &trans    &bootloader  &trans                        &trans        &trans        &bt BT_CLR_ALL
            >;

            sensor-bindings = <&inc_dec_kp RIGHT_ARROW LEFT_ARROW>;
        };
    };
};
